{% macro lazyImage(image) %}
    <img
        src="{{ image.getUrl('w60') }}"
        data-src="{{ image.getUrl('w600') }}"
        data-srcset="{{ image.getUrl('w150') }} 150w,
        {{ image.getUrl('w300') }} 300w,
        {{ image.getUrl('w600') }} 600w,
        {{ image.getUrl('w900') }} 900w,
        {{ image.getUrl('w1800') }} 1800w"
        class="lazyload lazyloading" alt="{{ image.title }}" />
{% endmacro %}

{% macro lazyImageHero(image) %}
    <img
        src="{{ image.getUrl('w60') }}"
        data-src="{{ image.getUrl('w600') }}"
        data-srcset="{{ image.getUrl('w150') }} 150w,
        {{ image.getUrl('w300') }} 300w,
        {{ image.getUrl('w600') }} 600w,
        {{ image.getUrl('w900') }} 900w,
        {{ image.getUrl('w1800') }} 1800w"
        style="max-height: 900px"
        class="object-cover h-full lazyload lazyloading" alt="{{ image.title }}" />
{% endmacro %}

